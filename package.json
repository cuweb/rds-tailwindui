{
  "version": "0.1.0",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "start": "tsdx watch",
    "dev": "tsdx watch --onSuccess 'yarn build-tailwind'",
    "build": "tsdx lint --fix && tsdx build && yarn build-tailwind && yarn size",
    "test": "concurrently 'yarn start-storybook --quiet --ci -p 6006' 'yarn cypress run'",
    "lint": "tsdx lint --fix",
    "prepare": "tsdx build && husky install",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "format": "prettier -w src",
    "storybook": "start-storybook -p 6006",
    "test:ci": "concurrently 'yarn start-storybook --quiet --ci -p 6006' 'yarn cypress run'",
    "build-storybook": "build-storybook",
    "build-tailwind": "NODE_ENV=production npx tailwindcss -o ./dist/tailwind.css --minify",
    "packages": "rm -rf node_modules ; yarn install"
  },
  "peerDependencies": {
    "react": ">=16",
    "react-dom": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "rds-tailwind",
  "author": "Niranjith Perumal",
  "module": "dist/rds-tailwind.esm.js",
  "size-limit": [
    {
      "path": "dist/rds-tailwind.cjs.production.min.js",
      "limit": "400 KB"
    },
    {
      "path": "dist/rds-tailwind.esm.js",
      "limit": "400 KB"
    }
  ],
  "devDependencies": {
    "@babel/core": "^7.18.13",
    "@cypress/react": "^6.2.0",
    "@headlessui/react": "^1.6.6",
    "@heroicons/react": "^2.0.10",
    "@size-limit/preset-small-lib": "^8.0.1",
    "@storybook/addon-a11y": "^6.5.10",
    "@storybook/addon-essentials": "^6.5.10",
    "@storybook/addon-info": "^5.3.21",
    "@storybook/addon-links": "^6.5.10",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/addons": "^6.5.10",
    "@storybook/builder-webpack5": "^6.5.10",
    "@storybook/manager-webpack5": "^6.5.10",
    "@storybook/react": "^6.5.10",
    "@tailwindcss/aspect-ratio": "^0.4.1",
    "@tailwindcss/forms": "^0.5.2",
    "@tailwindcss/typography": "^0.5.6",
    "@types/react": "^18.0.18",
    "@types/react-dom": "^18.0.6",
    "@whitespace/storybook-addon-html": "^5.0.0",
    "autoprefixer": "^10.4.8",
    "babel-loader": "^8.2.5",
    "concurrently": "^7.4.0",
    "cypress": "^10.7.0",
    "husky": "^8.0.0",
    "postcss": "^8.4.16",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-is": "^18.2.0",
    "size-limit": "^8.0.1",
    "tailwindcss": "^3.1.8",
    "tsdx": "^0.14.1",
    "tslib": "^2.4.0",
    "typescript": "^4.8.2"
  }
}
